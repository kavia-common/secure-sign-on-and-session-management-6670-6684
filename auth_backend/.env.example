# JWT signing secret (HS256). Change in production.
JWT_SECRET=please-change-me

# Optional issuer for minted JWTs
OAUTH_JWT_ISSUER=auth-backend

# JWT expiration in seconds
JWT_EXP_SECONDS=3600

# Redirect base URL used to build provider callbacks
OAUTH_REDIRECT_BASE_URL=http://localhost:3001

# Enable developer email-based login for local testing
DEV_LOGIN_ENABLED=true

# Google OAuth2
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth2
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# Microsoft OAuth2
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=

# CORS Allowed origins (comma separated or * for all)
CORS_ALLOWED_ORIGINS=*
